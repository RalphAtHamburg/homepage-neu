!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no", :name => "viewport"}/

    -# Show the baseline for pretty typography
    %script{:src => "http://files.keyes.ie/things/baseliner/baseliner-latest.min.js"}
      :cdata
    :javascript
      window.onload = function() {
        baseliner = new Baseliner(24);
      }

    -# Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Middleman"

    = stylesheet_link_tag :site

  %body{:class => "gesta near-black bg-white #{page_classes}"}

    %main.mw8.center.pa2.pa4-ns

      = partial "header"

      = yield

      = partial "footer"
